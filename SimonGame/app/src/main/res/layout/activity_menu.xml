<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/display_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="6"
            android:src="@mipmap/ic_male1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/display_user_name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/display_user_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" />



    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/classic"
        android:id="@+id/button_start"
        android:background="@color/light_red"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/display_user_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reverse"
        android:id="@+id/button_startReverse"
        android:background="@color/light_purple"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_instructions"
        android:id="@+id/button_instructions"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_startReverse"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/about_us"
        android:id="@+id/button_about_us"
        android:background="@color/light_blue"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="204dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_instructions" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/highscores"
        android:id="@+id/button_highscores"
        android:background="@color/light_green"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="252dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_about_us" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_user"
        android:id="@+id/button_select_user"
        android:background="@color/light_orange"
        android:textColor="@color/white"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="300dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_highscores" />

    <TextView
        android:id="@+id/version_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/version"
        tools:layout_conversion_absoluteX="337dp"
        tools:layout_conversion_absoluteY="348dp"
        tools:layout_conversion_absoluteWidth="47dp"
        tools:layout_conversion_absoluteHeight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>